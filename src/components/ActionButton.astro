---
import LightRays from "./LightRays.astro";

interface Props {
  link: string;
  text: string;
}

const { link, text } = Astro.props;
---

<div class="text-center py-2">
  <a href={link} target="_blank" rel="noreferrer">
    <button class="relative bg-transparent text-sky-600 font-semibold py-2 px-8 border-2 border-sky-600 rounded">
      <span
        class="-z-10 absolute top-0 h-full"
        style="left: -1px; top: 0;"
      >
        <LightRays color="#0ea5e9" />
      </span>
      {text}
    </button>
  </a>
</div>
