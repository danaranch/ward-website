---
import ActionButton from "../components/ActionButton.astro";
import LineItem from "../components/LineItem.astro";
import LineItemLeadership from "../components/LineItemLeadership.astro";
import LineItemBold from "../components/LineItemBold.astro";
import LightRays from "../components/LightRays.astro";
import "../styles/global.css";

const title = "Dana Ranch Ward";
const description = "Dana Ranch Ward Order Of Services";
---

<!doctype html>
<html lang="en" class="h-full w-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link
      rel="icon"
      type="image/x-icon"
      href={`${import.meta.env.BASE_URL}favicon.ico`}
    />
  </head>
  <body class="h-full w-full m-0">
    <div class="w-full h-full">
      <img
        src={`${import.meta.env.BASE_URL}img/bethseda.jpeg`}
        class="pb-4 m-auto"
        alt="jesus"
      />
      <img
        src={`${import.meta.env.BASE_URL}img/modern-logo.png`}
        class="m-auto w-3/4 md:w-1/2 xl:w-1/3"
        alt="church-logo"
      />
      <div class="church-font text-center p-1 py-2">
        <h1 class="text-3xl font-bold">Dana Ranch Ward</h1>
        <h2 class="text-xl">Order of Service</h2>
        <h3 class="text-lg">February 15, 2026</h3>
      </div>

      <div class="pt-4">
        <ActionButton
          link="https://zoom.us/j/98508434243"
          text="Join via broadcast"
        />
      </div>
      <hr class="h-px my-8 bg-gray-400 border-0" />

      <div id="services" class="mx-2">
        <LineItemLeadership left="Presiding" right="Bishop Shumway" />
        <LineItemLeadership left="Conducting" right="Will Shoemaker" />
        <LineItemLeadership left="Organist" right="Melody Williams" />
        <LineItemLeadership left="Chorister" right="Julie Clement" />

        <div class="p-8 my-4 rounded bg-sky-100">
          <div class="text-center">
            <em class="font-semibold text-lg">Announcements</em>
          </div>
          <ol class="list-decimal ml-5 sticky">
            <li class="pt-1">
              Ward choir practice is every Sunday at 12:45 at the Edgewood
              Building.
            </li>
            <li class="pt-1">
              Missionary Meal Signup. Online signup is preferred, or see the
              backup signup to be passed around during second hour. (
              <a
                href="https://www.signupgenius.com/go/10C0F4FADAE2DA7F5CE9-57457318-missionary#/"
                class="text-sky-600 hover:text-sky-800 underline break-words"
                target="_blank"
                rel="noopener noreferrer"
              >
                Sign up here
              </a>
              )
            </li>
            <li class="pt-1">
              Bishop's Hang Out: Cereal Sunday. All priests and young women
              class 16-18 are invited to the Shumway's home on the third Sunday
              of each month from 7:00-8:30 pm.
            </li>
            <li class="pt-1">
              Mission and Life Skills Prep for all Juniors and Seniors is held
              every 2nd and 4th Sunday at 3pm in the Relief Society room.
            </li>
          </ol>
        </div>

        <LineItem
          left="Opening Hymn"
          middle="Scatter Sunshine"
          right="230"
          link="https://www.churchofjesuschrist.org/media/music/songs/scatter-sunshine?lang=eng"
        />
        <LineItem left="Invocation" right="By Invitation" />

        <LineItemBold middle="Ward Business" />

        <LineItem
          left="Sacrament Hymn"
          middle="How Great The Wisdom and the Love"
          right="195"
          link="https://www.churchofjesuschrist.org/media/music/songs/how-great-the-wisdom-and-the-love?lang=eng"
        />

        <LineItemBold middle="Administration of the Sacrament" />

        <LineItem left="Speaker" right="Logan Downs" />
        <LineItem left="Speaker" right="Eric Huffaker" />

        <LineItem
          left="Intermediate Hymn"
          middle="We'll Bring the World His Truth"
          right="Young Men/Young Women"
          link="https://www.churchofjesuschrist.org/media/music/songs/we'll-bring-the-world-his-truth?lang=eng"
        />

        <LineItem left="Speaker" right="Damario Gough" />

        <LineItem
          left="Closing Hymn"
          middle="Our Savior's Love"
          right="113"
          link="https://www.churchofjesuschrist.org/media/music/songs/our-saviors-love?lang=eng"
        />

        <LineItem left="Benediction" right="By Invitation" />
      </div>

      <div class="h-20 flex items-center justify-between mt-4 bg-neutral-100">
        <div class="h-20 flex justify-center item-start">
          <div class="bg-[#0ea5e9] p-2 h-full">
            <img
              class="h-full"
              src={`${import.meta.env.BASE_URL}img/christus.png`}
              alt="Christ"
              height="full"
            />
          </div>
          <span class="h-full relative" style="left: -1px; top: 0;">
            <LightRays color="#0ea5e9" />
          </span>
        </div>
        <div class="mr-6 text-stone-500 text-right font-extrabold">
          <div>Dana Ranch Ward</div>
          <div>Mesa Kimball Stake</div>
        </div>
      </div>
    </div>
  </body>
</html>
